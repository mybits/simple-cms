<% @page_title = "Edit Page" %>

<%= link_to '<< Back to Pages List', {action: :index, :subject_id => @subject.id}, class: 'back-link' %>

<div class="page update">
	<h2>Update Page</h2>

	<%= form_for(@page, action: :update, :subject_id => @subject.id) do |f| %>

		<%= render(partial: 'form', locals: {:f => f}) %>

		<div class="form-buttons">
			<%= f.submit "Update Page" %>
		</div>
	<% end %>

</div>