<% @page_title = "Delete Page" %>

<%= link_to '<<Back to Page List', {action: :index, :subject_id => @subject.id}, class: 'back-link' %>

<div class="page delete">
	<h2>Delete Page</h2>

	<p>Are you sure you want to delete this page?</p>

	<%= form_for(@page, url: {action: :destroy, :id => @page.id, :subject_id => @subject.id}, method: :delete) do |f| %>

	<p class="reference-name"><%= @page.name %></p>

	<div class="form-buttons">
		<%= f.submit "Delete page" %>
	</div>

	<% end %>

</div>