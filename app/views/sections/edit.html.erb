<%= link_to '<< Back to section list', {action: :index}, class: 'back-link' %>

<div class="section update">

	<%= form_for(@section, {action: :update}) do |f| %>

		<table summary="Section form field">
			<tr>
				<th>Name</th>
				<td><%= f.text_field :name %></td>
			</tr>
			<tr>
				<th>Position</th>
				<td><%= f.text_field :position %></td>
			</tr>
			<tr>
				<th>Visible?</th>
				<td><%= f.text_field :visible %></td>
			</tr>
			<tr>
				<th>Content</th>
				<td><%= f.text_field :content %></td>
			</tr>
		</table>

		<div class="form-buttons">
			<%= f.submit 'Update section' %>
		</div>

	<% end %>

</div>