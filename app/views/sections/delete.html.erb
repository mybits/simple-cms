

<%= link_to '<< Back to section list', {action: :index}, class: 'back-list' %>

<div class "section delete">
	<h2>Section delete</h2>

	<%= form_for(@section, method: :delete) do |f| %>

		<p>Are you sure you want to delete this section?</p>

		<p class="reference-name"><%= @section.name %></p>

		<div class="form-buttons">
			<%= f.submit 'Delete section' %>
		</div>

	<% end %>
</div>