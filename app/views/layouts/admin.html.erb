<!DOCTYPE html>
<html>
<head>
  <title>SimpleCms | <%= @page_title || 'Admin Area' %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="header">
		<h1>Simple CMS Admin</h1>
	</div>
	<div id="main">
		<% if !flash[:notice].blank? %>
			<div class="notice">
				<%= flash[:notice] %>
			</div>
		<% end %>
		<div id="content">
			<%= yield %>
		</div>
	</div>

	<div id="footer">
		<p>Simple CMS 2013</p>
	</div>

</body>
</html>
